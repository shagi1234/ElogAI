<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.main.create_dvir.FragmentCreateDvir">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/header_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_corner_16"
            android:backgroundTint="@color/surface"
            android:orientation="horizontal"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ic_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_corner_8"
                android:backgroundTint="@color/surface"
                android:src="@drawable/ic_back"
                android:tint="@color/text_primary" />

            <TextView
                android:gravity="center"
                style="@style/TextLgSemiBold"
                android:layout_marginHorizontal="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/create_dvir"
                android:textColor="@color/text_primary" />

        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_corner_16"
                    android:backgroundTint="@color/surface"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMdMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:singleLine="true"
                            android:text="@string/vehicles"
                            android:textColor="@color/text_secondary"
                            app:drawableStartCompat="@drawable/ic_truck"
                            app:drawableTint="@color/text_secondary" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_vehicle_name"
                            style="@style/TextMdSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:singleLine="true"
                            android:text="Cascadia 125"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_lock" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMdMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:singleLine="true"
                            android:text="@string/trailers"
                            android:textColor="@color/text_secondary"
                            app:drawableStartCompat="@drawable/ic_unarchiv"
                            app:drawableTint="@color/text_secondary" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1" />

                        <EditText
                            android:maxLines="1"
                            android:id="@+id/tv_trailer_number"
                            style="@style/TextMdSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:backgroundTint="@color/transparent"
                            android:singleLine="true"
                            android:text="532051"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:id="@+id/ic_edt_trailer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pencil" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMdMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:singleLine="true"
                            android:text="@string/location"
                            android:textColor="@color/text_secondary"
                            app:drawableStartCompat="@drawable/ic_location"
                            app:drawableTint="@color/text_secondary" />


                        <TextView
                            android:id="@+id/tv_location_name"
                            style="@style/TextMdSemiBold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="N/A"
                            android:textColor="@color/text_primary" />


                        <ImageView
                            android:id="@+id/ic_locked_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_lock" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMdMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:singleLine="true"
                            android:text="@string/time"
                            android:textColor="@color/text_secondary"
                            app:drawableStartCompat="@drawable/ic_time"
                            app:drawableTint="@color/text_secondary" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_created_date"
                            style="@style/TextMdSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:singleLine="true"
                            android:text="13.02.2024"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_lock" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMdMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:singleLine="true"
                            android:text="@string/odometer"
                            android:textColor="@color/text_secondary"
                            app:drawableStartCompat="@drawable/ic_odometer"
                            app:drawableTint="@color/text_secondary" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_odometer_value"
                            style="@style/TextMdSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:singleLine="true"
                            android:text="-1"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_lock" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_corner_8"
                    android:backgroundTint="@color/surface"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMdMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/defects"
                            android:textColor="@color/text_secondary"
                            app:drawableStartCompat="@drawable/ic_broken_chain" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_add_defects"
                            style="@style/TextSmSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_corner_8"
                            android:backgroundTint="@color/brand100"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="10dp"
                            android:singleLine="true"
                            android:text="@string/add_defects"
                            android:textColor="@color/primary_brand" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/unit_defects_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background" />

                        <TextView
                            style="@style/TextSmSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_defects"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cp_unit_defects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:chipSpacingHorizontal="8dp"
                            app:chipSpacingVertical="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/trailer_defects_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/defects_divider" />

                        <TextView
                            style="@style/TextSmSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/trailer_defects"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cp_trailer_defects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:chipSpacingHorizontal="8dp"
                            app:chipSpacingVertical="12dp" />

                    </LinearLayout>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/bg_corner_12"
                    android:backgroundTint="@color/surface"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_create_dvir"
                        style="@style/PrimaryButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_dvir" />

                </FrameLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</FrameLayout>