<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/timeline_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/text_secondary"
        app:indicatorSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/stroke_tertiary"
        app:trackCornerRadius="12dp"
        app:trackThickness="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/timeline_indicator"
        app:layout_constraintEnd_toEndOf="@+id/timeline_indicator"
        app:layout_constraintStart_toStartOf="@+id/timeline_indicator"
        app:layout_constraintTop_toTopOf="@+id/timeline_indicator">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSmMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Break"
            android:singleLine="true"
            android:textColor="@color/text_secondary"
           />

        <TextView
            android:id="@+id/tv_value"
            style="@style/TextMdSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="14:00"
            android:textColor="@color/text_primary" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>