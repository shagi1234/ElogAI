<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/timeline_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="75"
        app:indicatorColor="@color/warning_on"
        app:indicatorSize="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/background"
        app:trackCornerRadius="12dp"
        app:trackThickness="11dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/timeline_indicator"
        app:layout_constraintEnd_toEndOf="@+id/timeline_indicator"
        app:layout_constraintStart_toStartOf="@+id/timeline_indicator"
        app:layout_constraintTop_toTopOf="@+id/timeline_indicator">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextCharts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Break"
            android:textColor="@color/text_secondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_value"
            style="@style/TextCharts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="7:20"
            android:textColor="@color/text_primary"
            android:textSize="28sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>