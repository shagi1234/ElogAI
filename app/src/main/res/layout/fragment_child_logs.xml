                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/val_total_time_sb"
                                    style="@style/TextPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
