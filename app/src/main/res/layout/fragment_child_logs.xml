                                    tools:ignore="SmallSp" />

                                <TextView
                                    style="@style/TextPrimary"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textSize="7sp"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    style="@style/TextPrimary"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="11"
                                    android:textSize="7sp"
                                    tools:ignore="SmallSp" />

                                <TextView
                                    style="@style/TextPrimary"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="M"
                                    android:textColor="@color/primary_brand"
                                    android:textSize="7sp"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="6dp">

                                <FrameLayout
                                    android:id="@+id/overlay_grid"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:alpha="0.6"
                                    android:background="@drawable/bg_content_graph"
                                    android:visibility="visible" />

                                <com.jjoe64.graphview.GraphView
                                    android:id="@+id/graph_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center" />

                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            style="@style/TextPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="10:0"
                            android:textColor="@color/text_secondary"
                            android:textSize="6sp"
                            android:visibility="invisible"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/off_duty_time_last"
                            style="@style/TextPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="center"
                            android:text="10:00"
                            android:textColor="@color/text_secondary"
                            android:textSize="6sp"
                            android:visibility="visible"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/sb_time_last"
                            style="@style/TextPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="center"
                            android:text="10:00"
                            android:textColor="@color/text_secondary"
                            android:textSize="6sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/timeline_container"
                            tools:ignore="SmallSp" />


                        <TextView
                            android:id="@+id/dr_time_last"
                            style="@style/TextPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="center"
                            android:text="10:00"
                            android:textColor="@color/text_secondary"
                            android:textSize="6sp"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/timeline_container"
                            tools:ignore="SmallSp" />


                        <TextView
                            android:id="@+id/on_time_last"
                            style="@style/TextPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="center"
                            android:text="10:00"
                            android:textColor="@color/text_secondary"
                            android:textSize="6sp"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/timeline_container"
                            tools:ignore="SmallSp" />


