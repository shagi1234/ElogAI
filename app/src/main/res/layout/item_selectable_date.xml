<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_corner_8_with_stroke">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:background="@color/transparent"
        android:checked="false"
        android:minHeight="54dp"
        android:paddingVertical="16dp"
        android:paddingStart="8dp"
        android:text="February 06"
        android:textAppearance="@style/TextSmSemiBold"
        android:textColor="@color/text_primary"
        app:buttonIcon="@drawable/custom_checkbox"
        app:buttonTint="@color/transparent" />

</FrameLayout>