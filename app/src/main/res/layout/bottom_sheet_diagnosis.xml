<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/cv_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="8dp"
                android:src="@drawable/ic_bottom_sheet_thumb"
                app:tint="@color/surface_disabled" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/oval"
                android:backgroundTint="@color/primary_brand"
                android:padding="12dp"
                android:src="@drawable/ic_analytics_inactive"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextXlBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/diagnosis_of_device"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/oval"
                        android:backgroundTint="@color/secondary_surface"
                        android:padding="8dp"
                        android:src="@drawable/truck"
                        app:tint="@color/text_secondary" />

                    <TextView
                        style="@style/TextSmSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="@string/eld_coordinates"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_eld_coordinates_status"
                        style="@style/TextSmSemiBold"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_corner_8"
                        android:backgroundTint="@color/success_container"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:text="@string/good"
                        android:textColor="@color/success_on" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/oval"
                        android:backgroundTint="@color/secondary_surface"
                        android:padding="8dp"
                        android:src="@drawable/ic_gps"
                        app:tint="@color/text_secondary" />

                    <TextView
                        style="@style/TextSmSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="@string/gps_coordinates"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_gps_status"
                        style="@style/TextSmSemiBold"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_corner_8"
                        android:backgroundTint="@color/error_container"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:text="@string/not_working"
                        android:textColor="@color/error_on" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/oval"
                        android:backgroundTint="@color/secondary_surface"
                        android:padding="8dp"
                        android:src="@drawable/ic_pin_flag"
                        app:tint="@color/text_secondary" />

                    <TextView
                        style="@style/TextSmSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="@string/fused_coordinates"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_both_location_status"
                        style="@style/TextSmSemiBold"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_corner_8"
                        android:backgroundTint="@color/error_container"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:text="@string/not_working"
                        android:textColor="@color/error_on" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/oval"
                        android:backgroundTint="@color/secondary_surface"
                        android:padding="8dp"
                        android:src="@drawable/ic_wifi"
                        app:tint="@color/text_secondary" />

                    <TextView
                        style="@style/TextSmSemiBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"
                        android:text="@string/network_quality"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tv_internet_status"
                        style="@style/TextSmSemiBold"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_corner_8"
                        android:backgroundTint="@color/success_container"
                        android:gravity="center"
                        android:paddingVertical="4dp"
                        android:text="@string/good"
                        android:textColor="@color/success_on" />

                </LinearLayout>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_done"
                style="@style/TextMdSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/ripple_corner_12"
                android:backgroundTint="@color/primary_brand"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="@color/white" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</FrameLayout>