<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_defects"
        style="@style/TextSmSemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingVertical="17dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:text="Above defects need to be corrected"
        android:textColor="@color/text_primary"
        app:buttonIcon="@drawable/custom_checkbox"
        app:buttonTint="@color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_secondary" />


</LinearLayout>