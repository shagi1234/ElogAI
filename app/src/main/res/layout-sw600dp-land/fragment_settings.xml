                    android:layout_height="match_parent"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/bg_corner_16"
                    android:backgroundTint="@color/surface"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
