                                android:text="shahruh.daniyarov@elog.com"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
